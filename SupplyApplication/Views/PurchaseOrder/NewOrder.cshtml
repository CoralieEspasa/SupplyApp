@model Supplier

@{
    ViewData["Title"] = "NewOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="m-2">

        </div>
        <form>
            <div class="form-group m-2">
                <label for="exampleFormControlSelect2">Supplier Item</label>
                <select name="item"class="form-control p-2" id="SupplierItem">
                    @foreach (Item i in Model.Items)
                    {
                        <option value="@i.Id">@i.Id - @i.ItemName - @i.UnitPrice € - LT : @i.DeliveryTime days</option>
                    }
                </select>
                <button type="select" class="btn m-2" style="background-color:darkblue; color:aliceblue">Add</button>
            </div>
        </form>
        <form asp-controller="PurchaseOrder" method="post" asp-action="add">
            <div class="form-group mt-3">
                <label for="Quantity">Quantity</label>
                <input type="text" name="Quantity" id="Id" class="form-control rounded" placeholder="">
            </div>
            <div class="form-group mt-3">
                <label for="UnitPrice">Unit Price</label>
                <input type="text" name="UnitPrice" id="UnitPrice" class="form-control rounded" placeholder="">
            </div>
            <div class="form-group mt-3">
                <label for="Remise">Discount</label>
                <input type="text" name="Remise" id="Remise" class="form-control rounded" placeholder="">
            </div>
            <div class="form-group mt-3">
                <label for="DeliveryTime">Delivery Time</label>
                <input type="text" name="DeliveryTime" id="DeliveryTime" class="form-control rounded" placeholder="">
            </div>
            <div class="form-group mt-3">
                <label for="DeliveryDate">Delivery Date</label>
                <input type="text" name="DeliveryDate" id="DeliveryDate" class="form-control rounded" placeholder="">
            </div>
            <button type="submit" class="btn btn-primary">Add</button>
        </form>
    </div>
</div>
